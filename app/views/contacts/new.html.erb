<div class="container">
  <div class="row">
    <h3 class="text-center whiteh">Contact Me</h3>
    <div class="col-md-4 col-md-offset-4">

      <div>
        <%= form_for @contact do |f| %>
          <% if @contact.errors.any? %>
            <ul>
              <% @contact.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
          <div class="form-group whiteh">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control greyh' %>
          </div>
          <div class="form-group whiteh">
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control greyh' %>
          </div>
          <div class="form-group whiteh">
            <%= f.label :comments %>
            <%= f.text_area :comments, class: 'form-control greyh' %>
          </div>
          <%= f.submit 'Submit', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>