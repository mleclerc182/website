<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h1 class="text-center">Create Your Profile</h1>
    <div class="form-group whiteh">
      <%= form_for @profile, url: user_profile_path do |f| %>
        <% if @profile.errors.any? %>
          <ul>
            <% @profile.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <div class="form-group whiteh">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, class: 'form-control greyh' %>
        </div>
        <div class="form-group whiteh">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: 'form-control greyh' %>
        </div>
        <div class="form-group whiteh">
          <%= f.label :job_title %>
          <%= f.text_field :job_title, class: 'form-control greyh' %>
        </div>
        <div class="form-group whiteh">
          <%= f.label :phone_number %>
          <%= f.text_field :phone_number, class: 'form-control greyh' %>
        </div>
        <div class="form-group whiteh">
          <%= f.label :contact_email %>
          <%= f.text_field :contact_email, class: 'form-control greyh' %>
        </div>
        <div class="form-group whiteh">
          <%= f.label :description %>
          <%= f.text_area :description, class: 'form-control greyh' %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Profile", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>