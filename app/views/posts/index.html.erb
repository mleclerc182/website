

<h1 class="whiteh">Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th class="whiteh">Title</th>
      <th class="whiteh">Body</th>
      <th class="whiteh">Submitted By</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
  <% puts post.user.id %>
      <tr>
        <td class="whiteh text-nowrap"><%= post.title %></td>
        <td class="whiteh text-wrap"><%= post.body %></td>
        <td class="whiteh"><%= post.email.split('@')[0] %></td>
        <td><%= link_to 'Show', post, class: 'btn btn-primary whiteh' %></td>
        <% if user_signed_in? && (current_user.email == post.email || current_user.admin)  %>
          <td><%= link_to 'Edit', edit_post_path(post), class: 'btn btn-warning whiteh' %></td>
          <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger whiteh' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class: 'btn btn-success' %>
